{% extends "@NoticeBoardBundle/Default/layout.html.twig" %}

{% if not list %}
    {% set title = "No Recipes" %}
    {% set header = "No Recipes" %}
    {% set board = "No Item" %}
{% else %}
    {% set board = list|first.Board %}
    {% set title = list|first.Board %}
    {% set header = list|first.Board %}
{% endif %}
{% block body %}

    {% if board  == "No Item" %}
        <h3>Consider adding a Recipe <a href="{{ path('addNotice') }}">here</a></h3>
    {% else %}
        {{ render(controller(
            'App\\NoticeBoardBundle\\Controller\\DefaultController::showNoticeGrid',
            { 'slug' : board }
        )) }}
    {% endif %}

{% endblock %}
{% block title %}{{ parent() }} - {{ title }}{% endblock %}
{% block header %}{{ header }}{% endblock %}